/* index.wxss */
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.login-btn {
  width: 200rpx;
  height: 80rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 10rpx;
  border: none;
}

.user-profile {
  text-align: center;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 20px;
}

.username {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
}

.button {
  width: 150px;
  height: 40px;
  background-color: #4CAF50;
  color: white;
  border-radius: 5px;
  margin: 10px;
  border: none;
}
